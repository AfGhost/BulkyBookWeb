@model Category         /*Her trenger vi ikke IEnumerable model, siden vi skal Create og trenger ikke gå gjennom vår controller*/

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@        @*Alt av validering skal vi ha, så det blir det samme*@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CreatedDateTime"></label>
            <input asp-for="CreatedDateTime" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>   @*Knapp teksten vil forandres til Update. Men den vil oppdatere blankt om vi ikke navngir Edit på toppen som <form method="post" asp-action="Edit">*@
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a> 
    </div>
</form>

@section Scripts{          
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}